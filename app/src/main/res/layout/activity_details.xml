<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="squaring.vitrox.buxpj.DetailsActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/titleDetail"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleDetail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:id="@+id/symbolDetail"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/currentPLabel"
        android:layout_alignParentEnd="true"
        android:id="@+id/currentPText"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:text="@string/closingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentPLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/closingPLabel"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="textStart" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/closingPLabel"
        android:layout_alignParentEnd="true"
        android:id="@+id/closingPText"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="textEnd" />

    <TextView
        android:text="@string/currentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/currentPLabel"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="textStart"
        android:layout_below="@+id/symbolDetail"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/percentvalue"
        android:layout_alignParentEnd="true"
        android:id="@+id/percentText"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:text="@string/percentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/percentvalue"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/closingPLabel"
        android:layout_alignParentStart="true" />
</RelativeLayout>
